<?xml version="1.0" encoding="UTF-8"?>
<toolchains xmlns="http://maven.apache.org/TOOLCHAINS/1.1.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://maven.apache.org/TOOLCHAINS/1.1.0
            http://maven.apache.org/xsd/toolchains-1.1.0.xsd">
  <!--
    Maven Toolchains Configuration
    Enforces Java 17 for workflow-core-engine
    Financial-Grade Requirement: Java 17+ ONLY
  -->
  <toolchain>
    <type>jdk</type>
    <provides>
      <version>17</version>
      <vendor>oracle</vendor>
    </provides>
    <configuration>
      <jdkHome>C:\Program Files\Java\jdk-17.0.2</jdkHome>
    </configuration>
  </toolchain>
</toolchains>

